{
  "extends": [
    "stylelint-config-standard-scss"
  ],
  "rules": {
      "indentation": 4,
      "color-no-invalid-hex": true,
      "selector-class-pattern": null,
      "scss/at-rule-no-unknown": true,
      "scss/dollar-variable-pattern": "^[a-z][a-zA-Z0-9]+$"
  },
  "ignoreFiles": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**"
  ]
}